@model DCC_Planned_Derived_Ventures.Models.Itinerary

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Itinerary</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MilesAroundRoute)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MilesAroundRoute)
        </dd>




    </dl>

    @foreach (var address in Model.Addresses)
    {
        if (Model.DestinationId == address.ID)
        {
            <div class="text-bold">
                <h4>Destination Address</h4>

                @Html.DisplayFor(item => address.AddressLine)
                @Html.DisplayFor(item => address.City.name)
            </div>
        }
        else if (Model.DestinationId != address.ID)
        {

            @Html.DisplayFor(item => address.AddressLine)
            @Html.DisplayFor(item => address.City.name)
        }
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
